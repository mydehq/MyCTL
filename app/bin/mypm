#!/bin/env bash
#  __  __       ____  __  __
# |  \/  |_   _|  _ \|  \/  |
# | |\/| | | | | |_) | |\/| |
# | |  | | |_| |  __/| |  | |
# |_|  |_|\__, |_|   |_|  |_|
#         |___/
#
# Distro Agonastic Package Manager (wrapper for myctl)

if command -v myctl &> /dev/null; then
    myctl pkg "$@"
else
    echo "Error: myctl is not installed." >&2
    exit 1
fi
